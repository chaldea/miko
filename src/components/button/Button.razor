@namespace Miko
@inherits MikoDomComponentBase

<Host Name="ion-button" 
      Class="@ClassMapper.Class" 
      Style="@Style"
      IsShadow="true"
      StyleMode="@Mode">
    <button @ref="context[0]"
            class="button-native"
            part="native"
            disabled="@Disabled">
        <span class="button-inner">
            <slot name="icon-only"></slot>
            <slot name="start"></slot>
            <slot></slot>
            <slot name="end"></slot>
        </span>
    </button>
    @ChildContent
</Host>
