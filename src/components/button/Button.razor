@namespace Miko
@inherits MikoDomComponentBase

<Host Tag="ion-button"
      StyleUrls="@_styleUrls"
      Shadow="true"
      Class="@ClassMapper.Class" 
      Style="@Style">
    <button @ref="context[0]"
            class="button-native"
            part="native"
            disabled="@Disabled">
        <span class="button-inner">
            <slot name="icon-only"></slot>
            <slot name="start"></slot>
            <slot></slot>
            <slot name="end"></slot>
        </span>
    </button>
    @ChildContent
</Host>
